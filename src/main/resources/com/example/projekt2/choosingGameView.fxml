<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.projekt2.Controllers.ChoosingGameView"
            stylesheets="@styleBattleShip.css" styleClass="background" prefHeight="400.0" prefWidth="600.0" >
    <top>
        <Label text="Select Game" alignment="CENTER" BorderPane.alignment="CENTER" styleClass="title">
            <font><Font name="Times New Roman bold" size="50"/></font>
            <padding>
                <Insets top="25" bottom="120"/>
            </padding>
        </Label>
    </top>
    <left>
        <VBox>
            <padding>
                <Insets left="30" right="30"/>
            </padding>
            <ImageView fx:id="imageView1" fitHeight="200.0" fitWidth="300.0" pickOnBounds="true"
                       preserveRatio="true" styleClass="image-view">
                <image>
                    <Image url="@image/battleShips.jpg"/>
                </image>
            </ImageView>
        </VBox>
    </left>
    <right>
        <VBox>
            <padding>
                <Insets left="30" right="30"/>
            </padding>
            <ImageView fx:id="imageView2" fitHeight="200.0" fitWidth="300.0" pickOnBounds="true"
                       preserveRatio="true" styleClass="image-view">
                <image>
                    <Image url="@image/mastermind.jpg"/>
                </image>
            </ImageView>
        </VBox>
    </right>
</BorderPane>
