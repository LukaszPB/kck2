<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="borderPane" styleClass="background" stylesheets="@styleMastermind.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.projekt2.Controllers.MastermindController">
    <top>
        <Label fx:id="title" alignment="CENTER" styleClass="title" text="Mastermind" BorderPane.alignment="CENTER">
            <font><Font name="Times New Roman bold" size="50" /></font>

        </Label>
    </top>

    <left>
        <AnchorPane fx:id="anchorPane">
        </AnchorPane>
    </left>

    <right>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="20" top="20" />
            </padding>
            <Button onAction="#backToMenu" styleClass="menuButton" text="Back" />
            <Button onAction="#check" styleClass="menuButton" text="Check" />
            <Button onAction="#reset" styleClass="menuButton" text="Reset" />
        </VBox>

    </right>

</BorderPane>
